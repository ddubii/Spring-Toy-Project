{{>layout/header}}
<br/>
<div class="col-md-12">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header bi bi-chat-right-dots"><h2> {{posts.title}} </h2></div>
        <form>
            <div class="card-body">
                <label for="title">글 번호</label>
                <input type="text" class="form-control" id="id" value="{{id}}" readonly>
            </div>
            <div class="card-body">
                <label for="author"> 작성자 </label>
                <input type="text" class="form-control" id="author" value="{{posts.author}}" readonly>
            </div>
            <div class="card-body">
                <label for="title">제목</label>
                <input type="text" class="form-control" id="title" value="{{posts.title}}">
            </div>
            <div class="card-body">
                <label for="content"> 내용 </label>
                <textarea class="form-control" id="content">{{posts.content}}</textarea>
            </div>
            <!-- 첨부파일 -->
            {{#post.fileId}}
                <div class="card-body">
                    {{#file.isImgExist}}
                        <img src="/display?filename={{file.filename}}" width="300px" />
                        <p></p>
                    {{/file.isImgExist}}
                    <a href="/download?filename={{file.filename}}">{{file.origFilename}}</a>
                </div>
            {{/post.fileId}}
        </form>
        </div>
        <br/>
        {{! Buttons }}
        <a href="/" role="button" class="btn btn-secondary">취소</a>
        <button type="button" class="btn btn-primary" id="btn-update">수정 완료</button>
        <button type="button" class="btn btn-danger" id="btn-delete">삭제</button>
        <br/>
        {{! Comments }}
        {{>comment/list}}
        {{>comment/form}}
    </div>
</div>
{{>layout/footer}}